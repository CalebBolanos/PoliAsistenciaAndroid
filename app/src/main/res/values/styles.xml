<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="blanco" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/blanco</item>
        <item name="colorPrimaryDark">@color/blanco</item>
        <item name="colorAccent">@color/blanco</item>
    </style>

    <style name="Transparente">
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowTranslucentNavigation">true</item>
    </style>

    <style name="StyleTituloLogin">
        <item name="colorPrimary">@color/blanco</item>
        <item name="colorPrimaryDark">@color/blanco</item>
        <item name="colorAccent">@color/blanco</item>
    </style>

    <style name="StyleBotonLogin">
        <item name="colorPrimary">@color/colorPrimaryDark</item>
        <item name="colorPrimaryDark">@color/blanco</item>
        <item name="colorAccent">@color/blanco</item>
    </style>

    <style name="login" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorControlNormal">@color/gris</item>
        <item name="colorControlActivated">@color/blanco</item>
        <item name="colorControlHighlight">@color/blanco</item>
        <item name="colorPrimary">@color/blanco</item>
        <item name="colorPrimaryDark">@color/blanco</item>
        <item name="colorAccent">@color/blanco</item>
    </style>

    <style name="azul">
        <item name="colorControlNormal">@color/gris</item>
        <item name="colorControlActivated">@color/azul</item>
        <item name="colorControlHighlight">@color/azul</item>
        <item name="colorPrimary">@color/azul</item>
        <item name="colorPrimaryDark">@color/azul</item>
        <item name="colorAccent">@color/azul</item>
    </style>

    <style name="TextAppearance.App.TextInputLayout" parent="@android:style/TextAppearance">
    <item name="android:textColor">@color/azul</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />




</resources>
